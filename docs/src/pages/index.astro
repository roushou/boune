        if (btn.dataset.example === example) {
          btn.classList.remove('text-neon-blue', 'border-neon-blue');
          btn.classList.add('bg-neon-pink', 'text-black', 'border-neon-pink');
        }
      });
    }

    exampleBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const example = btn.dataset.example;
        if (example) switchExample(example);
      });
    });

    switchExample('basic');

