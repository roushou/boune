    // COPY TO CLIPBOARD
    // ---------------------------------------------------------
    function copyInstall(iconEl: Element) {
      const text = "bun add boune";
      navigator.clipboard.writeText(text).then(() => {
        const installText = document.getElementById('install-text');
        const original = installText?.innerText || '';

        if (installText) {
          installText.style.color = "#ff00ff";
        }

        iconEl.setAttribute('data-lucide', 'check');
        createIcons({ icons });

        setTimeout(() => {
          if (installText) {
            installText.innerText = original;
            installText.style.color = "";
          }
          iconEl.setAttribute('data-lucide', 'copy');
          createIcons({ icons });
        }, 2000);
      });
    }

    document.getElementById('copy-btn')?.addEventListener('click', () => {
      const icon = document.getElementById('copy-icon');
      if (icon) copyInstall(icon);
    });

    document.getElementById('copy-btn-footer')?.addEventListener('click', () => {
      const icon = document.getElementById('copy-icon-footer');
      if (icon) copyInstall(icon);
    });
