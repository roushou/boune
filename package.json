{
  "name": "boune-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "bun run apps/dev/src/app.ts",
    "clean": "bun run ./scripts/clean.ts",
    "format": "oxfmt . --write",
    "format:check": "oxfmt . --check",
    "lint": "oxlint . --fix",
    "lint:check": "oxlint . --type-aware",
    "types:check": "tsc --noEmit",
    "release": "bun scripts/release.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxfmt": "^0.17.0",
    "oxlint": "^1.32.0",
    "oxlint-tsgolint": "^0.8.5",
    "typescript": "^5"
  }
}
